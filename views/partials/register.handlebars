<section class="register">
    <div class="container">
        <p class="p0"> Inscris Toi</p>
        <div class="row justify-content-center">

            <div class="col-md-12">

                <div class="card">

                    <article class="card-body">
                        <form action="/user/register" method="POST" enctype="multipart/form-data">
                            <div class="form-row">
                                <div class="col form-group">
                                    <label>Username</label>
                                    <input type="text" name="username" class="form-control" placeholder=" "
                                        value={{data.username}}>
                                </div> <!-- form-group end.// -->
                                <div class="col form-group">
                                    <label>Mot de passe</label>
                                    <input class="form-control" name="password" type="password" value={{data.password}}>
                                </div>
                            </div> <!-- form-group end.// -->
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" name="email" class="form-control" placeholder=""
                                    value={{data.email}}>
                                <small class="form-text text-muted">Nous ne partagerons jamais vos informations avec qui
                                    que
                                    ce soit.</small>
                            </div> <!-- form-group end.// -->
                            <div class="form-group">
                                <label class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="gender" value="Masculin">
                                    <span class="form-check-label"> Homme </span>
                                </label>
                                <label class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="gender" value="Féminin">
                                    <span class="form-check-label"> Femme </span>
                                </label>
                            </div> <!-- form-group end.// -->
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Ville</label>
                                    <input type="text" name="city" class="form-control">
                                </div> <!-- form-group end.// -->
                                <div class="form-group col-md-6">
                                    <label>Pays</label>
                                    <select id="inputState" class="form-control" name="country">
                                        <option> Choose...</option>
                                        <option>France</option>
                                        <option>Russie</option>
                                        <option selected="">Amérique</option>
                                        <option>Espagne</option>
                                        <option>Allemagne</option>
                                    </select>
                                </div> <!-- form-group end.// -->
                            </div> <!-- form-row.// -->
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block"> Inscription
                                </button>
                            </div> <!-- form-group// -->
                            <small class="text-muted">En cliquant sur le bouton "Inscription", vous confirmez que vous
                                acceptez nos
                                Conditions d'utilisation et politique de confidentialité.
                        </form>
                    </article> <!-- card-body end .// -->
                    <div class="border-top card-body text-center">Tu as déja un compte? <a href="/user/login">Se
                            connecter</a>
                    </div>
                </div> <!-- card.// -->
            </div> <!-- col.//-->

        </div> <!-- row.//-->

    </div>

</section>